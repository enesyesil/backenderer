# ==== Repo & CI ====
github_org    = "your-org-or-user"
github_repo   = "your-repo-name"
github_branch = "main"
env           = "prod"

# ==== Compute ====
# Pick a valid Amazon Linux 2023 AMI for your region (example below is NOT real):
ami_id        = "ami-xxxxxxxxxxxxxxxxx"
instance_type = "t3.small"
# instance_profile = "backenderer-ec2-profile" # if you manage it outside the module

# ==== Container Registry ====
create_ecr    = true
ecr_repo_name = "backenderer-apps"

# ==== DNS / TLS (recommended for prod) ====
# Set tls_mode to "letsencrypt" or "alb_acm" if you want HTTPS on day one.
tls_mode        = "none"          # change to "letsencrypt" or "alb_acm" when ready
# route53_zone_id = "Zxxxxxxxxxxxxxxx"
# base_domain     = "apps.example.com"


# Copy to backend.tf and edit values if you want remote state.
terraform {
  backend "s3" {
    bucket         = "YOUR_BUCKET_NAME"
    key            = "backenderer/prod/terraform.tfstate"
    region         = "YOUR_REGION"
    dynamodb_table = "YOUR_DDB_LOCK_TABLE"
    encrypt        = true
  }
}
